<mujoco model="so101_vision_scene">
  <!-- Include tuned robot model with better control gains -->
  <include file="so101.xml"/>

  <statistic center="0.0 0 0.2" extent="0.8"/>

  <!-- Improved solver settings for better contact handling -->
  <option timestep="0.002" iterations="100" solver="Newton" tolerance="1e-10">
    <flag contact="enable" override="enable"/>
  </option>

  <!-- Better contact parameters -->
  <size nconmax="100" njmax="500"/>

  <visual>
    <headlight diffuse="0.6 0.6 0.6" ambient="0.5 0.5 0.5" specular="0 0 0"/>
    <rgba haze="0.15 0.25 0.35 1"/>
    <global azimuth="160" elevation="-20"/>
    <quality shadowsize="0"/>
  </visual>

  <asset>
    <texture type="skybox" builtin="gradient" rgb1="0.3 0.5 0.7" rgb2="0 0 0" width="512" height="3072"/>
    <texture type="2d" name="groundplane" builtin="checker" mark="edge" rgb1="0.2 0.3 0.4" rgb2="0.1 0.2 0.3"
      markrgb="0.8 0.8 0.8" width="300" height="300"/>
    <material name="groundplane" texture="groundplane" texuniform="true" texrepeat="5 5" reflectance="0"/>
  </asset>

  <worldbody>
    <light pos="0 0 1.5" dir="0 0 -1" directional="true" castshadow="false"/>
    <geom name="floor" size="0 0 0.05" type="plane" material="groundplane"
          friction="1.0 0.05 0.01" solimp="0.99 0.99 0.001" solref="0.01 1"/>

    <!-- Cameras -->
    <camera name="third_person" pos="0.6 0.4 0.4" xyaxes="-0.8 0.6 0 -0.3 -0.4 0.9"/>
    <camera name="top_down" pos="0.2 0 0.8" xyaxes="1 0 0 0 1 0"/>
    <camera name="wrist_cam" pos="0.2 0 0.3" xyaxes="0 -1 0 0.7 0 0.7" fovy="60"/>

    <!-- Red cube with better contact parameters -->
    <body name="red_cube" pos="0.25 0 0.03">
      <freejoint/>
      <inertial pos="0 0 0" mass="0.05" diaginertia="0.0005 0.0005 0.0005"/>
      <geom name="red_cube_geom" type="box" size="0.02 0.02 0.02" rgba="1 0 0 1"
            friction="1.0 0.05 0.01"
            solimp="0.99 0.99 0.001 0.5 2"
            solref="0.01 1"
            condim="4"
            priority="1"/>
    </body>

    <!-- Blue cube with better contact parameters -->
    <body name="blue_cube" pos="0.15 0.15 0.03">
      <freejoint/>
      <inertial pos="0 0 0" mass="0.05" diaginertia="0.0005 0.0005 0.0005"/>
      <geom name="blue_cube_geom" type="box" size="0.02 0.02 0.02" rgba="0 0 1 1"
            friction="1.0 0.05 0.01"
            solimp="0.99 0.99 0.001 0.5 2"
            solref="0.01 1"
            condim="4"
            priority="1"/>
    </body>
  </worldbody>
</mujoco>
